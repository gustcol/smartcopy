# SmartCopy Environment Configuration
# Generated by Ansible for {{ ansible_hostname }}

# Logging
RUST_LOG=info
SMARTCOPY_LOG_DIR={{ smartcopy_log_dir }}

# Performance tuning based on {{ smartcopy_network_speed }} network
{% if smartcopy_network_speed == '10g' %}
SMARTCOPY_THREADS=8
SMARTCOPY_BUFFER_SIZE=16777216
SMARTCOPY_STREAMS=4
{% elif smartcopy_network_speed == '100g' %}
SMARTCOPY_THREADS=32
SMARTCOPY_BUFFER_SIZE=67108864
SMARTCOPY_STREAMS=16
{% elif smartcopy_network_speed == '200g' %}
SMARTCOPY_THREADS=64
SMARTCOPY_BUFFER_SIZE=134217728
SMARTCOPY_STREAMS=32
{% elif smartcopy_network_speed == '400g' %}
SMARTCOPY_THREADS=128
SMARTCOPY_BUFFER_SIZE=268435456
SMARTCOPY_STREAMS=64
{% endif %}

# Certificate paths (for QUIC)
SMARTCOPY_CERT_DIR={{ smartcopy_data_dir }}/certs

# Data directory
SMARTCOPY_DATA_DIR={{ smartcopy_data_dir }}
